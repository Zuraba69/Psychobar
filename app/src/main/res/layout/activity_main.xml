<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/eng_flag"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/rounded_buttons"
        app:srcCompat="@drawable/eng_flag"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/geo_flag"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/rounded_buttons"
        app:srcCompat="@drawable/geo_flag"
        android:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/login_eng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="PHSYCHOBAR"
            android:layout_gravity="center|top"
            android:layout_marginTop="180dp"
            android:textColor="#F3EFEF"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/psychobar_logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/LoginEmail_eng"
                android:background="@drawable/rounded_buttons"
                android:textColorHint="#F3EFEF"
                android:textColor="#F3EFEF"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/LoginPassword_eng"
                android:background="@drawable/rounded_buttons"
                android:textColorHint="#F3EFEF"
                android:textColor="#F3EFEF"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:hint="Enter Your Password"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/passwordRemember_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="15dp"
                android:textSize="20dp"
                android:textColor="#F3EFEF"
                android:text="Forgot your password?"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">


            <Button
                android:id="@+id/LoginButton_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/rounded_buttons"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="#F3EFEF"
                android:textSize="20dp" />
            <Button
                android:id="@+id/dontHaveAnAccountBtn_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_buttons"
                android:text="Registration"
                android:textAllCaps="false"
                android:textColor="#F3EFEF"
                android:textSize="20dp" />


        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/login_geo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="ფსიქობარი"
            android:layout_gravity="center|top"
            android:layout_marginTop="180dp"
            android:textColor="#F3EFEF"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/psychobar_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">


            <EditText
                android:id="@+id/LoginEmail_geo"
                android:background="@drawable/rounded_buttons"
                android:textColorHint="#A9F3EFEF"
                android:textColor="#F3EFEF"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:hint="იმეილი"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/LoginPassword_geo"
                android:background="@drawable/rounded_buttons"
                android:textColorHint="#A9F3EFEF"
                android:textColor="#F3EFEF"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:hint="პაროლი"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/passwordRemember_geo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="15dp"
                android:textSize="20dp"
                android:textColor="#F3EFEF"
                android:text="დაგავიწყდათ პაროლი ?"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">


            <Button
                android:id="@+id/LoginButton_geo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/rounded_buttons"
                android:text="შესვლა"
                android:textAllCaps="false"
                android:textColor="#F3EFEF"
                android:textSize="20dp" />
            <Button
                android:id="@+id/dontHaveAnAccountBtn_geo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_buttons"
                android:text="რეგისტრაცია"
                android:textAllCaps="false"
                android:textColor="#F3EFEF"
                android:textSize="20dp" />



        </LinearLayout>
    </FrameLayout>

</FrameLayout>